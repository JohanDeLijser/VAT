<VBox spacing="10" alignment="TOP_LEFT" prefWidth="500" prefHeight="500" fx:controller="ShapeAnalysisTool.controller.SphereController" xmlns:fx="http://javafx.com/fxml">
    <fx:define>
        <Font fx:id="FONT" size="18" />
        <ToggleGroup fx:id="shapeRadioButtons"/>
    </fx:define>

    <VBox spacing="10" alignment="TOP_LEFT">
        <Button fx:id="backButton" text="Back" onAction="#goBack" />
        <Label>Sphereview</Label>

        <Label>Radius of the sphere:</Label>
        <TextField fx:id="radiusField" promptText="radius" />

        <Button fx:id="calculateButton" text="Calculate" onAction="#calculateSphere" />
    </VBox>

    <VBox>
        <Label>Volume of the sphere: </Label>
        <TextField fx:id="result"/>
    </VBox>

</VBox>
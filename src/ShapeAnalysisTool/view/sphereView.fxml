<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.beans.property.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.Color?>

<VBox fx:id="mainBox" spacing="10" alignment="TOP_LEFT" prefWidth="800" prefHeight="600" fx:controller="ShapeAnalysisTool.controller.shapes.SphereController" xmlns:fx="http://javafx.com/fxml" stylesheets="@ShapeAnalysisTool/../../style.css">
    <fx:define>
        <Font fx:id="FONT" size="18" />
    </fx:define>

    <HBox fx:id="actionBox">
        <Button fx:id="backButton" text="Back" onAction="#goBack" />
        <Button fx:id="saveButton" text="Save" onAction="#saveCurrentShape" />
    </HBox>

    <VBox>
        <Text fx:id="notice" />
    </VBox>

    <VBox fx:id="calculateBox" spacing="10" alignment="TOP_LEFT">
        <Text>Sphereview</Text>

        <Label>Radius of the sphere:</Label>
        <TextField fx:id="radiusField" promptText="radius" maxWidth="200"/>

        <Button fx:id="calculateButton" text="Calculate" onAction="#calculateSphere" />
    </VBox>

    <VBox fx:id="resultBox">
        <Label>Volume of the sphere: </Label>
        <TextField fx:id="result" maxWidth="200"/>
    </VBox>

</VBox>